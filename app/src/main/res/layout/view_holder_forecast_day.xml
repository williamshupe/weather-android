<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/forecast_day_view_holder_container"
                                             android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?attr/selectableItemBackground">
    <TextView
        android:id="@+id/forecast_day_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_margin"
        android:layout_marginTop="@dimen/view_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/view_margin"/>
    <TextView
        android:id="@+id/forecast_day_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_half_margin"
        android:layout_marginBottom="@dimen/view_margin"
        app:layout_constraintTop_toBottomOf="@+id/forecast_day_date"
        app:layout_constraintLeft_toLeftOf="@+id/forecast_day_date"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/forecast_day_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/forecast_day_date"
        android:layout_marginEnd="@dimen/view_margin"/>
    <TextView
        android:id="@+id/forecast_day_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/forecast_day_high"
        android:layout_marginTop="@dimen/view_half_margin"
        app:layout_constraintTop_toBottomOf="@+id/forecast_day_high"/>

    <ImageView
        android:id="@+id/weather_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="false"
        android:src="@drawable/clear"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintRight_toLeftOf="@+id/forecast_day_high"
        android:layout_marginRight="@dimen/view_half_margin"
        android:layout_marginTop="@dimen/view_half_margin"
        android:layout_marginBottom="@dimen/view_half_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>