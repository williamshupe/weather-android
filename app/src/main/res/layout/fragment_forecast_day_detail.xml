<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/view_margin"
        >

        <TextView
            android:id="@+id/forecast_day_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/view_half_margin"
            android:layout_marginRight="@dimen/view_half_margin"
            android:layout_marginTop="@dimen/view_margin"
            android:textSize="@dimen/text_medium"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/forecast_day_detail_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/view_half_margin"
            android:layout_marginStart="@dimen/view_half_margin"
            android:layout_marginTop="@dimen/view_half_margin"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weather_image"/>

        <TextView
            android:id="@+id/forecast_day_detail_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_half_margin"
            android:layout_marginEnd="@dimen/view_margin"
            android:layout_marginStart="@dimen/view_margin"
            android:textSize="@dimen/text_medium"
            app:layout_constraintBottom_toTopOf="@+id/forecast_day_detail_low"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline2"
            />

        <TextView
            android:id="@+id/forecast_day_detail_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="@dimen/view_half_margin"
            android:textSize="@dimen/text_medium"
            app:layout_constraintBottom_toBottomOf="@+id/forecast_day_detail_condition"
            app:layout_constraintLeft_toLeftOf="@+id/forecast_day_detail_high"
            app:layout_constraintTop_toBottomOf="@+id/forecast_day_detail_high"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteY="0dp"/>

        <ImageView
            android:id="@+id/weather_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/view_margin"
            android:layout_marginStart="@dimen/view_margin"
            android:layout_marginTop="@dimen/view_half_margin"
            android:adjustViewBounds="false"
            android:src="@drawable/sunny"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forecast_day_detail_date"
            app:layout_constraintVertical_bias="1.0"
            />
    </android.support.constraint.ConstraintLayout>
</ScrollView>